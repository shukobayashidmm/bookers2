<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>


    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand p-3" href="/"><span>Bookers</span></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        </button>

        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <% if user_signed_in? %>
           <ul class="navbar-nav ml-auto">
             <li class="nav-link"><%= link_to user_path(current_user), class:"text-light" do %><i class="fas fa-home"></i>Home<% end %></li>
             <li class="nav-link"><%= link_to users_path, class:"text-light" do %><i class="fas fa-users"></i>Users<% end %></li>
             <li class="nav-link"><%= link_to books_path, class:"text-light" do %><i class="fas fa-book-open"></i>Books<% end %></li>
             <li class="nav-link"><%= link_to destroy_user_session_path, method: :delete, class:"text-light" do %><i class="fas fa-sign-out-alt"></i>Log out<% end %></li>
           </ul>

          <% else %>
           <ul class="navbar-nav ml-auto">
             <li><%= link_to root_path, class:"nav-link text-light" do %><i class="fas fa-home"></i>Home<% end %></li>
             <li><%= link_to home_about_path, class:"nav-link text-light" do %><i class="fas fa-link"></i>About<% end %></li>
             <li><%= link_to new_user_registration_path, class:"nav-link text-light" do %><i class="fas fa-user-plus"></i>Sign up<% end %></li>
             <li><%= link_to new_user_session_path, class:"nav-link text-light" do %><i class="fas fa-sign-in-alt"></i>Log in<% end %></li>
            </ul>
          <% end %>
        </div>
      </div>
      </nav>
    </header>
    <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "#{key}") %>
  <% end %>
      <%= yield %>
    <footer>
      <div class="container-mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>



  </body>
</html>
