<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navber navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">
            <span>Bookers</span>
          </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <% if user_signed_in? %>
           <ul class="navbar-nav ml-auto">
             <li><%= link_to "Home", user_path(current_user), class:"nav-link text-light" %></li>
             <li><%= link_to "User", users_path, class:"nav-link text-light" %></li>
             <li><%= link_to "Books", books_path, class:"nav-link text-light" %></li>
             <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class:"nav-link text-light" %></li>
           </ul>

          <% else %>
           <ul class="navbar-nav ml-auto">
             <li><%= link_to "Home", root_path, class:"nav-link text-light" %></li>
             <li><%= link_to "About", homes_about_path, class:"nav-link text-light" %></li>
             <li><%= link_to "Sign up", new_user_registration_path, class:"nav-link text-light" %></li>
             <li><%= link_to "Log in", new_user_session_path, class:"nav-link text-light" %></li>
            </ul>
          <% end %>

        </div>
      </div>
      </nav>
    </header>
      <%= yield %>
    <footer>
      <div class="container-mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>

  </body>
</html>
