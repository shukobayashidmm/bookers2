<h1>Book detail</h1>

<% @books.each do |book| %>

 <span><%= book.title %></span>
 <span><%= book.body %></span>
 <%= link_to "Edit", edit_book_path(book.id) %>
 <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削しますか？" %>

<% end %>


<h1>New Book</h1>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit '投稿' %>
  <% end %>

