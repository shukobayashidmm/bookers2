<%= render 'users/show', users:@users %>

<h1>Book detail</h1>

<% @books.each do |book| %>

 <span><%= link_to book.title, book_path(book.id) %></span>
 <span><%= book.body %></span>

<% end %>


<h1>New Book</h1>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit '投稿' %>
  <% end %>

